<div class="comments comments-list">
  {{#each this}}
  <section class="comment comment-body">
    <div class="meta comment-heading">
      <h4 class="user">{{user.username}}</h4>
      <h5 class="time">{{format_date created_at}}</h5>
    </div>
    <p class="text">
      {{comment_text}}
      <a href="/single/edit/{{id}}">Edit</a>
    </p>
  </section>
  {{/each}}
</div>

